<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Combat Extended</li>
		</mods>
        <match Class="PatchOperationSequence">
			<operations>
                <li Class="PatchOperationReplace">
                    <xpath>
                        /Defs/StatDef[defName="UnarmedDamage"]/maxValue
                    </xpath>
                    <value>
                        <maxValue>1000000</maxValue>
                    </value>
                </li>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/StatDef[defName="UnarmedDamage"]/postProcessCurve/points</xpath>
                    <value>
                        <li>(1000, 20)</li>
                    </value>
                </li>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/StatDef[defName="UnarmedDamage"]/postProcessCurve/points</xpath>
                    <value>
                        <li>(1000000, 1000000)</li>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>